---
import CheckIcon2 from "#assets/icons/CheckIcon2.astro";
import { getAllProducts } from "./products-collection.api";

const products = await getAllProducts();
const productCategories = [
  ...new Set(products.flatMap((p) => p.category)),
].filter(Boolean);

const siteUrl = Astro.site ? Astro.site.toString() : "https://www.alefoods.pe";

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: "Alefoods Products",
  description: "Premium Peruvian cooked quinoa and export quality coffee.",
  numberOfItems: products.length,
  itemListElement: products.map((product, index) => ({
    "@type": "ListItem",
    position: index + 1,
    item: {
      "@type": "Product",
      name: product.title,
      url: new URL(`/products/${product.slug}/`, siteUrl).toString(),
      image: new URL(product.picture[0]?.url || "", siteUrl).toString(),
      description: product.shortDescription,
      offers: {
        "@type": "Offer",
        priceCurrency: "PEN",
        price: product.price,
      },
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />

<section class="px-4 sm:px-6 md:px-8 pb-8 sm:pb-12 md:pb-16">
  <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
    <aside class="w-full lg:w-64 shrink-0">
      <h2 class="text-lg font-bold text-gray-800 mb-6">Filter by Category</h2>
      <div class="bg-white shadow-sm">
        <ul class="divide-y divide-gray-300">
          <li>
            <button
              type="button"
              data-filter="all"
              class="filter-btn-product w-full text-left px-4 py-3 text-sm border-2 border-green-700 font-semibold bg-white text-black transition-colors capitalize cursor-pointer ease-in-out duration-250 hover:border-2 hover:border-green-600 hover:bg-green-500 hover:text-white"
            >
              all
            </button>
          </li>
          {
            productCategories.map((category) => (
              <li>
                <button
                  type="button"
                  data-filter={category}
                  class="filter-btn-product w-full text-left px-4 py-3 text-sm border-2 border-green-700 font-semibold  bg-white text-black transition-colors capitalize cursor-pointer ease-in-out duration-250 hover:border-2 hover:border-green-600 hover:bg-green-500 hover:text-white"
                >
                  {category}
                </button>
              </li>
            ))
          }
        </ul>
      </div>
    </aside>

    <!-- Products Grid -->
    <div class="flex-1">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-12"
      >
        {
          products.map((product, i) => (
            <a
              data-category={product.category}
              href={`/products/${product.slug}/`}
              class="product-card group block transition-all duration-300"
            >
              <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200 hover:shadow-md transition-shadow">
                <div class="relative mb-4 aspect-square overflow-hidden rounded-lg bg-gray-100">
                  <img
                    src={product.picture[0].url}
                    alt={product.picture[0].name || product.title}
                    class="size-full object-cover bg-white"
                  />
                </div>
                <div class="flex items-start justify-between mb-2">
                  <h3 class="text-lg sm:text-xl font-bold text-gray-800 flex-1">
                    {product.title}
                  </h3>
                </div>
                <p class="text-sm text-gray-600 mb-4">
                  {product.shortDescription}
                </p>
                <div class="flex items-center gap-2 justify-start">
                  <span class="material-symbols-outlined text-sm ">
                    <CheckIcon2 />
                  </span>
                  <span class="text-md font-semibold text-green-800">
                    S/. {product.price}.00{" "}
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  type FilterValue = string;

  function productFunction(): void {
    const filterButtons = document.querySelectorAll<HTMLButtonElement>(
      ".filter-btn-product",
    );
    const cards = document.querySelectorAll<HTMLElement>(".product-card");

    function filterCard(buttonFilterValue: FilterValue): void {
      cards.forEach((card) => {
        const category = card.getAttribute("data-category");
        if (!category) {
          card.classList.add("hidden");
          return;
        }

        if (buttonFilterValue === "all" || buttonFilterValue === category) {
          card.classList.remove("hidden");
        } else {
          card.classList.remove("block");
          card.classList.add("hidden");
        }
      });
    }

    function updateActiveButton(clickedButton: HTMLElement): void {
      filterButtons.forEach((btn) => {
        btn.classList.remove(
          "bg-green-500",
          "border-2",
          "border-green-600",
          "text-white",
        );
        btn.classList.add("bg-white", "text-black");
        btn.setAttribute("aria-pressed", "false");
      });

      clickedButton.classList.remove("bg-white", "text-black");
      clickedButton.classList.add(
        "bg-green-500",
        "border-2",
        "border-green-600",
        "text-white",
      );
      clickedButton.setAttribute("aria-pressed", "true");
    }

    filterButtons.forEach((button) => {
      button.addEventListener("click", (e: MouseEvent) => {
        const target = e.currentTarget as HTMLButtonElement;
        if (!target) return;

        const buttonFilterValue = target.getAttribute("data-filter");
        if (!buttonFilterValue) return;

        filterCard(buttonFilterValue);
        updateActiveButton(target);
      });
    });

    const allButton = document.querySelector<HTMLButtonElement>(
      '[data-filter="all"]',
    );
    if (allButton) {
      updateActiveButton(allButton);
    }
  }

  productFunction();
  document.addEventListener("astro:page-load", productFunction);
</script>
