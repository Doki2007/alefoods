---
import { Image } from "astro:assets";
import { getAllRecipes } from "./recipe-collection.api";

const recipes = await getAllRecipes();
const uniqueCategories = [...new Set(recipes.flatMap((r) => r.category))].filter(Boolean);
---

<section
  class="w-full max-w-7xl mx-auto px-4 sm:px-6 md:px-8 pb-8 sm:pb-12 md:pb-16"
>
  <div
    class="flex flex-wrap justify-center gap-2 sm:gap-3 md:gap-4 mb-8 sm:mb-12 "
  >
    <button
      data-filter="all"
      class="filter-btn-recipe px-4 sm:px-5 md:px-6 py-2 sm:py-2.5 rounded-full bg-green-500 border-2 border-green-600 text-black font-medium text-sm sm:text-base transition-colors hover:bg-green-500 hover:border-2 hover:border-green-600 hover:text-white capitalize cursor-pointer"
    >
      All
    </button>
    {
      uniqueCategories.map((category) => (
        <button
          data-filter={category}
          class="filter-btn-recipe px-4 sm:px-5 md:px-6 py-2 sm:py-2.5 rounded-full bg-white border-2 border-green-500 text-black font-medium text-sm sm:text-base transition-colors hover:bg-green-500 hover:border-2 hover:border-green-600 hover:text-white capitalize cursor-pointer"
        >
          {category}
        </button>
      ))
    }
  </div>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 mb-8 sm:mb-12 items-stretch"
  >
    {
      recipes.map((recipe, i) => (
        <a
          href={`/recipes/${recipe.slug}/`}
          class="recipe-card h-full group block transition-all duration-300"
          data-category={recipe.category}
        >
          <div class="h-full bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300">
            {recipe.image.url ? (
              <div class="relative w-full aspect-square overflow-hidden bg-gray-200">
                {/* <Image 
                    src={recipe.image[0].url} 
                    alt={recipe.image[0].name || recipe.title}
                    width={300}  
                    height={300}
                    loading={i < 3 ? "eager" : "lazy"}
                    fetchpriority={i < 3 ? "high" : "low"}
                    format="webp" 
                    quality="mid" 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                /> */}
                <img
                  src={recipe.image.url}
                  alt={recipe.image.name}
                  class="size-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
            ) : (
              <div class="w-full aspect-square bg-gray-200 flex items-center justify-center">
                <span class="text-gray-400 text-sm">No image</span>
              </div>
            )}
            <div class="p-4 sm:p-5">
              <h3 class="text-lg sm:text-xl font-semibold text-gray-800 group-hover:text-emerald-600 transition-colors">
                {recipe.title}
              </h3>
            </div>
          </div>
        </a>
      ))
    }
  </div>

</section>

<script>

  function recipeFunction() {
    // 1. obtenemos los botones y las cards
    const filterButtons = document.querySelectorAll<HTMLButtonElement>(".filter-btn-recipe");
    const cards = document.querySelectorAll<HTMLElement>(".recipe-card");


    function filterCards( buttonFilterValue: string): void{
      cards.forEach(( card ) => {
          const category = card.getAttribute('data-category');

          if ( !category ) {
            card.classList.add('hidden');
            return;
          }

          if( buttonFilterValue === 'all' || buttonFilterValue === category) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
            card.classList.remove('block');
          } 
        });
    }

    function updateActiveButton( clickedButton: HTMLElement):void{
      filterButtons.forEach((btn) => {
        // Estado inactivo: bg-white border-green-500 text-black
        btn.classList.remove('bg-green-500', 'border-green-600', 'text-white');
        btn.classList.add('bg-white', 'border-green-500', 'text-black');
      });

      // Estado activo: bg-green-500 border-green-600 text-white
      clickedButton.classList.remove('bg-white', 'border-green-500', 'text-black');
      clickedButton.classList.add('bg-green-500', 'border-green-600', 'text-white');
    }

    // 2. añadimos el evento click a cada botón
    filterButtons.forEach(( button ) => {
      button.addEventListener("click", (e: MouseEvent) => {
        const target = e.currentTarget as HTMLElement;
        if ( !target ) return;

        const buttonFilterValue = target.getAttribute('data-filter');
        if( !buttonFilterValue ) return;

        filterCards(buttonFilterValue);
        updateActiveButton(target);
      });
    });

    // 3. Establecer el botón "All" como activo al inicio
    const allButton = document.querySelector<HTMLButtonElement>('[data-filter="all"]');
    if (allButton) {
      updateActiveButton(allButton);
    }

  }


      recipeFunction();
      document.addEventListener('astro:page-load', recipeFunction);
</script>
