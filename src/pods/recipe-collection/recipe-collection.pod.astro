---
import { getAllRecipes } from "./recipe-collection.api";

const recipes = await getAllRecipes();
const uniqueCategories = [
  ...new Set(recipes.flatMap((r) => r.category)),
].filter(Boolean);

const siteUrl = Astro.site ? Astro.site.toString() : "https://www.alefoods.pe";
const recipeListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: "Alefoods Recipes",
  itemListElement: recipes.map((recipe, index) => ({
    "@type": "ListItem",
    position: index + 1,
    url: new URL(`/recipes/${recipe.slug}/`, siteUrl).toString(),
    name: recipe.title,
  })),
};
---

<script
  type="application/ld+json"
  set:html={JSON.stringify(recipeListSchema)}
/>

<section class="w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 pb-8 sm:pb-12 md:pb-16">
    <div
      class="flex flex-wrap justify-center gap-2 sm:gap-3 md:gap-4 mb-8 sm:mb-12"
    >
      <button
        type="button"
        data-filter="all"
        class="filter-btn-recipe px-4 sm:px-5 md:px-6 py-2 sm:py-2.5 rounded-full bg-btn-primary border-2 border-btn-primary text-light-bg font-semibold text-sm sm:text-base transition-colors ease-in-out duration-250 hover:bg-filter hover:border-2 hover:border-btn-primary hover:text-light-bg capitalize cursor-pointer"
      >
        All
      </button>
      {
        uniqueCategories.map((category) => (
          <button
            type="button"
            data-filter={category}
            class="filter-btn-recipe px-4 sm:px-5 md:px-6 py-2 sm:py-2.5 rounded-full bg-light-bg border-2 border-btn-primary text-primary font-semibold text-sm sm:text-base transition-colors hover:bg-filter hover:border-2 hover:border-btn-primary hover:text-light-bg capitalize cursor-pointer"
          >
            {category}
          </button>
        ))
      }
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 mb-8 sm:mb-12 items-stretch"
    >
      {
        recipes.map((recipe, i) => (
          <a
            href={`/recipes/${recipe.slug}/`}
            class="recipe-card h-full group block transition-all duration-300"
            data-category={recipe.category}
          >
            <div class="h-full bg-light-bg rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300">
              {recipe.image.url ? (
                <div class="relative w-full aspect-square overflow-hidden">
                  <img
                    src={recipe.image.url}
                    alt={recipe.image.name}
                    fetchpriority="high"
                    class="size-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              ) : (
                <div class="w-full aspect-square bg-light-bg flex items-center justify-center">
                  <span class="text-primary text-sm">No image</span>
                </div>
              )}
              <div class="p-4 sm:p-5">
                <h2 class="text-lg sm:text-xl font-semibold text-primary group-hover:text-accent transition-colors">
                  {recipe.title}
                </h2>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
<script>
  function recipeFunction(): void {
    const filterButtons =
      document.querySelectorAll<HTMLButtonElement>(".filter-btn-recipe");
    const cards = document.querySelectorAll<HTMLElement>(".recipe-card");

    function filterCards(buttonFilterValue: string): void {
      cards.forEach((card) => {
        const category = card.getAttribute("data-category");

        if (!category) {
          card.classList.add("hidden");
          return;
        }

        if (buttonFilterValue === "all" || buttonFilterValue === category) {
          card.classList.remove("hidden");
        } else {
          card.classList.add("hidden");
          card.classList.remove("block");
        }
      });
    }

    function updateActiveButton(clickedButton: HTMLButtonElement): void {
      filterButtons.forEach((btn) => {
        // Estado inactivo: bg-white border-btn-primary text-black
        btn.classList.remove(
          "bg-btn-primary",
          "border-btn-primary",
          "text-light-bg",
        );
        btn.classList.add("bg-light-bg", "border-btn-primary", "text-primary");
        btn.ariaPressed = "false";
      });

      // Estado activo: bg-green-500 border-green-600 text-white
      clickedButton.classList.remove("bg-light-bg", "text-primary");
      clickedButton.classList.add("bg-filter", "text-light-bg");
      clickedButton.ariaPressed = "true";
    }

    filterButtons.forEach((button) => {
      button.addEventListener("click", (e: MouseEvent) => {
        const target = e.currentTarget as HTMLButtonElement;
        if (!target) return;

        const buttonFilterValue = target.getAttribute("data-filter");
        if (!buttonFilterValue) return;

        filterCards(buttonFilterValue);
        updateActiveButton(target);
      });
    });

    const allButton = document.querySelector<HTMLButtonElement>(
      '[data-filter="all"]',
    );
    if (allButton) {
      updateActiveButton(allButton);
    }
  }

  recipeFunction();
  document.addEventListener("astro:page-load", recipeFunction);
</script>
