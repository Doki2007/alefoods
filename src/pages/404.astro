---
import Layout from "#layouts/Layout.astro";
import errorImage from "#assets/images/error02.webp";
import errorBg from "#assets/images/bgpattern.webp";
---

<Layout title="404 - PÃ¡gina no encontrada">
  <section
    class="relative min-h-screen w-full text-gray-900 flex flex-col items-center overflow-hidden"
  >
    <div
      class="pointer-events-none absolute inset-0
            bg-linear-to-b from-gray-50/70 via-gray-100/60 to-gray-200/70
            bg-cover bg-center"
      style={`background-image: url(${errorBg.src}); mix-blend-mode: multiply;`}
    >
    </div>

    <div
      class="relative flex-1 flex flex-col items-center w-full px-4 sm:px-6 md:px-10 py-12 sm:py-16 md:py-40"
    >
      <div
        class="w-full max-w-5xl text-center space-y-6 sm:space-y-8 md:space-y-10"
      >
        <div class="flex justify-center items-center">
          <div
            class="relative isolate flex justify-center items-center
            before:absolute before:inset-0 before:bg-white/60 before:backdrop-blur-sm
            before:rounded-3xl before:shadow-xl
            w-4/5 sm:w-3/5 max-w-4xl"
          >
            <img
              src={errorImage.src}
              alt="Error 404 image"
              class="relative z-10 w-full h-auto drop-shadow-2xl"
              loading="lazy"
            />
          </div>
        </div>

        <div
          class="relative isolate bg-white/40 backdrop-blur-sm rounded-2xl px-6 py-8 shadow-lg max-w-3xl mx-auto"
        >
          <h1
            class="text-3xl sm:text-4xl md:text-5xl font-bold text-black [text-shadow:0_0_2px_#fff,0_0_4px_#fff,0_1px_2px_#0003]"
          >
            Page not found
          </h1>
          <p
            class="mt-4 text-base font-medium sm:text-lg text-black/70 leading-relaxed"
          >
            We're sorry, the page you are looking for does not exist or has been
            moved. Please check the URL or return to our home page.
          </p>
        </div>

        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-5 pt-2"
        >
          <a
            href="/"
            class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-3.5 rounded-full bg-blue-700 text-white font-semibold shadow-[0_10px_25px_rgba(37,99,235,0.2)] hover:bg-blue-800 transition-colors"
          >
            Back to home
          </a>
          <a
            href="/products"
            class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-3.5 rounded-full border border-gray-300 text-gray-800 font-semibold bg-white hover:bg-gray-50 transition-colors"
          >
            View Products
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

