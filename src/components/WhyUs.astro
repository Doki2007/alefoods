---
import CheckIcon from "#assets/icons/CheckIcon.astro";
import ClockIcon from "#assets/icons/ClockIcon.astro";
import EnergyIcon from "#assets/icons/EnergyIcon.astro";
import HeartIcon from "#assets/icons/HeartIcon.astro";
---

<section class="relative w-full pt-16 px-6">
  <div class="max-w-6xl mx-auto gap-y-10">
    <div class="flex flex-col text-center mb-12 gap-5">
      <h2 class="text-3xl md:text-4xl font-bold text-primary">
        Why Choose Alefoods
      </h2>
      <p
        class="text-center text-lg font-semibold max-w-lg mx-auto text-secondary"
      >
        Cooked quinoa and coffee for brewing, made for everyday consumption.
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 select-none"
    >
      <div
        class="text-center p-6 rounded-2xl border bg-white/40 border-primary inset-shadow-sm shadow-btn-primary
        hover:shadow-md hover:shadow-btn-primary hover:bg-white transition-shadow z-10 group"
      >
        <div class="mb-4">
          <div
            class="w-16 h-16 mx-auto bg-light-bg/50 rounded-full flex items-center justify-center group-hover:bg-light-bg/90 transition-all duration-200 ease-in-out"
          >
            <CheckIcon
              class={"size-8 text-btn-primary/70 group-hover:text-btn-primary"}
            />
          </div>
        </div>
        <h3 class="text-xl font-bold mb-2 text-primary">Peruvian Heritage</h3>
        <p class="text-sm font-semibold text-secondary">
          Andean quinoa and specialty coffee from Oxapampa.
        </p>
      </div>

      <div
        class="text-center p-6 rounded-2xl border bg-white/40 border-primary inset-shadow-sm shadow-btn-primary
        hover:shadow-md hover:shadow-btn-primary hover:bg-white transition-shadow z-10 group"
      >
        <div class="mb-4">
          <div
            class="w-16 h-16 mx-auto bg-light-bg/50 rounded-full flex items-center justify-center group-hover:bg-light-bg/90 transition-all duration-200 ease-in-out"
          >
            <ClockIcon
              class={"size-8 text-btn-primary/70 group-hover:text-btn-primary"}
            />
          </div>
        </div>
        <h3 class="text-xl font-bold mb-2 text-primary">Ready To Eat</h3>
        <p class="text-sm font-semibold text-secondary">
          Pre-cooked quinoa, ready to serve and enjoy instantly.
        </p>
      </div>

      <div
        class="text-center p-6 rounded-2xl border bg-white/40 border-primary inset-shadow-sm shadow-btn-primary
        hover:shadow-md hover:shadow-btn-primary hover:bg-white transition-shadow z-10 group"
      >
        <div class="mb-4">
          <div
            class="w-16 h-16 mx-auto bg-light-bg/50 rounded-full flex items-center justify-center group-hover:bg-light-bg/90 transition-all duration-200 ease-in-out"
          >
            <HeartIcon
              class={"size-8 text-btn-primary/70 group-hover:text-btn-primary"}
            />
          </div>
        </div>
        <h3 class="text-xl font-bold mb-2 text-primary">100% Natural</h3>
        <p class="text-sm font-semibold text-secondary">
          Gluten-free and no artificial additives.
        </p>
      </div>

      <div
        class="text-center p-6 rounded-2xl border bg-white/40 border-primary inset-shadow-sm shadow-btn-primary
        hover:shadow-md hover:shadow-btn-primary hover:bg-white transition-shadow z-10 group"
      >
        <div class="mb-4">
          <div
            class="w-16 h-16 mx-auto bg-light-bg/50 rounded-full flex items-center justify-center group-hover:bg-light-bg/90 transition-all duration-200 ease-in-out"
          >
            <EnergyIcon
              class={"size-8 text-btn-primary/70 group-hover:text-btn-primary"}
            />
          </div>
        </div>
        <h3 class="text-xl font-bold mb-2 text-primary">Daily Energy</h3>
        <p class="text-sm font-semibold text-secondary">
          Fuel your day with our premium coffee and quinoa.
        </p>
      </div>
    </div>
  </div>
</section>
