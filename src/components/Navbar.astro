---
import WhatsappIcon from "#assets/icons/WhatsappIcon.astro";
import logo from "#assets/images/logo1.webp";

const phone = "51932120023";
const message = "Buen día! Me gustaría comprar un producto.";
const encodedMessage = encodeURIComponent(message);
---

<section class="max-w-7xl mx-auto">
  <nav class="h-[12dvh] flex justify-between items-center p-3 shadow-b-md">
    <a href="/"
      ><img
        src={logo.src}
        alt="Logo Irides"
        class="h-full w-22"
        loading="eager"
      /></a
    >

    <ul class="flex gap-5 items-center">
      <li class="hidden sm:flex text-sm font-medium">
        <a href="/products" title="View Products" aria-label="Products"
          >Products</a
        >
      </li>
      <li class="hidden sm:flex text-sm font-medium">
        <a href="/recipes" title="Explore Recipes" aria-label="Recipes"
          >Recipes</a
        >
      </li>
      <li class="hidden sm:flex text-sm font-medium">
        <a href="/contact-us" title="Contact Us" aria-label="Contact Us"
          >Contact Us</a
        >
      </li>
      <li class="hidden sm:flex text-sm font-medium">
        <a href="/about-us" title="About Us" aria-label="About Us">About Us</a>
      </li>

      <a
        href={`https://wa.me/${phone}?text=${encodedMessage}`}
        aria-label="Shop Now on WhatsApp"
        title="Shop Now on WhatsApp"
        target="_blank"
        class="flex justify-center items-center gap-2 rounded-full bg-green-600 border-2 border-green-600 px-3 py-2 font-semibold text-black cursor-pointer transition-all ease-in-out duration-250 hover:bg-green-500 hover:border-2 hover:border-green-600 hover:text-white"
      >
        <WhatsappIcon class={"size-7"} />
        Shop Now
      </a>
    </ul>
  </nav>
  <hr class="text-gray-400 mx-4" />
</section>
