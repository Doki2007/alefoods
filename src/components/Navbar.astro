import logo from "../assets/images/logo1.png";
---

<section class="max-w-7xl mx-auto">
  <nav class="h-[12dvh] flex justify-between items-center p-3 shadow-b-md">
    <a href="/"
      ><img src={logo.src} alt="Logo Irides" class="h-full w-22" /></a
    >

    <ul class="flex gap-5 items-center">
      <li class="hidden sm:flex text-sm"><a href="/productos">Products</a></li>
