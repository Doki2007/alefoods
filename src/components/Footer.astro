---
import FacebookIcon from "#assets/icons/FacebookIcon.astro";
import InstagramIcon from "#assets/icons/InstagramIcon.astro";
import TiktokIcon from "#assets/icons/TiktokIcon.astro";
import logo1 from "#assets/images/logo1.webp";
import facebookIcon from "#assets\svg\facebookIcon.svg";
---

<footer class="w-full text-white py-12 px-6" style="background-color: #7D2719;">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div class="flex flex-col items-center">
        <div class="flex gap-2 mb-4">
          <img src={logo1.src} alt="Alefoods Logo" class="h-22" />
        </div>
        <p class="text-gray-400 text-sm">
          Peruvian nutrition that inspires trust.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-2">Quick Links</h3>
        <ul>
          <li>
            <a
              href="/products"
              aria-label="Products"
              class="text-gray-400 hover:text-white transition-colors text-sm"
              >Products</a
            >
          </li>
          <li>
            <a
              href="/recipes"
              aria-label="Recipes"
              class="text-gray-400 hover:text-white transition-colors text-sm"
              >Recipes</a
            >
          </li>
          <li>
            <a
              href="/about-us"
              aria-label="About Us"
              class="text-gray-400 hover:text-white transition-colors text-sm"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="/contact-us"
              aria-label="Contact Us"
              class="text-gray-400 hover:text-white transition-colors text-sm"
              >Contact Us</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-2">Contact Us</h3>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li>Email: egarro@alefoods.pe</li>
          <li>Phone: +51 987 654 321</li>
          <li>Location: Lima, Perú</li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4">Follow Us</h3>
        <div class="flex gap-3">
          <a
            aria-label="Facebook"
            href="https://www.facebook.com/alefoodsperu"
            target="_blank"
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
          >
            <FacebookIcon class={"size-5 text-amber-900"} />
          </a>
          <a
            aria-label="TikTok"
            href="https://www.tiktok.com/@irides.pe"
            target="_blank"
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
          >
            <TiktokIcon class={"size-5 text-amber-900"} color={"#7b3306"} />
          </a>
          <a
            aria-label="Instagram"
            href="https://www.instagram.com/irides.pe"
            target="_blank"
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-gray-200 transition-colors"
          >
            <InstagramIcon class={"size-5 text-amber-900"} />
          </a>
        </div>
      </div>
    </div>

    <hr class="border-gray-600 my-8" />

    <div class="text-center text-gray-200 text-sm">
      © 2026 Alefoods.pe. All rights reserved.
    </div>
  </div>
</footer>
