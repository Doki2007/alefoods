---
import logo from "#assets/images/logo1.webp";
import background1 from "#assets/images/background.webp";
---

<section class="w-full py-16 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl text-center md:text-4xl font-bold mb-12 text-slate-800">
      Best Sellers
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div
        class="bg-amber-50 rounded-lg pb-6 hover:shadow-lg transition-shadow"
      >
        <div
          class="mb-4 h-48 bg-amber-100 flex items-center justify-center overflow-hidden rounded-t-lg"
        >
          <img
            src={logo.src}
            loading="lazy"
            alt="Quinoa Oil"
            class="w-full h-full object-cover rounded-t-lg"
          />
        </div>
        <div class="px-4">
          <h3 class="text-xl font-bold mb-2 text-slate-800">Quinoa Oil</h3>
          <p class="text-sm text-gray-600 mb-4">
            Rich in omega fatty acids, perfect for healthy cooking.
          </p>
          <a
            href="/products"
            class="text-green-600 font-medium text-sm hover:text-green-700 transition-colors inline-flex items-center gap-1"
          >
            View Product →
          </a>
        </div>
      </div>

      <div
        class="bg-amber-50 rounded-lg pb-6 hover:shadow-lg transition-shadow"
      >
        <div
          class="mb-4 h-48 bg-amber-100 flex items-center justify-center overflow-hidden rounded-t-lg"
        >
          <img
            src={logo.src}
            loading="lazy"
            alt="Maca Powder"
            class="w-full h-full object-cover rounded-t-lg"
          />
        </div>
        <div class="px-4">
          <h3 class="text-xl font-bold mb-2 text-slate-800">Maca Powder</h3>
          <p class="text-sm text-gray-600 mb-4">
            Boost your energy and stamina naturally.
          </p>
          <a
            href="/products"
            class="text-green-600 font-medium text-sm hover:text-green-700 transition-colors inline-flex items-center gap-1"
          >
            View Product →
          </a>
        </div>
      </div>

      <div
        class="bg-amber-50 rounded-lg pb-6 hover:shadow-lg transition-shadow"
      >
        <div
          class="mb-4 h-48 bg-amber-100 flex items-center justify-center overflow-hidden rounded-t-lg"
        >
          <img
            src={background1.src}
            loading="lazy"
            alt="Chicha Morada Mix"
            class="w-full h-full object-cover rounded-t-lg"
          />
        </div>

        <div class="px-4">
          <h3 class="text-xl font-bold mb-2 text-slate-800">
            Chicha Morada Mix
          </h3>
          <p class="text-sm text-gray-600 mb-4">
            A traditional Peruvian drink, rich in antioxidants.
          </p>
          <a
            href="/products"
            class="text-green-600 font-medium text-sm hover:text-green-700 transition-colors inline-flex items-center gap-1"
          >
            View Product →
          </a>
        </div>
      </div>

      <div
        class="bg-amber-50 rounded-lg pb-6 hover:shadow-lg transition-shadow"
      >
        <div
          class="mb-4 h-48 bg-amber-100 flex items-center justify-center overflow-hidden rounded-t-lg"
        >
          <img
            src={logo.src}
            loading="lazy"
            alt="Camu Camu Capsules"
            class="w-full h-full object-cover rounded-t-lg"
          />
        </div>
        <div class="px-4">
          <h3 class="text-xl font-bold mb-2 text-slate-800">
            Camu Camu Capsules
          </h3>
          <p class="text-sm text-gray-600 mb-4">
            Packed with Vitamin C for a powerful immune boost.
          </p>
          <a
            href="/products"
            class="text-green-600 font-medium text-sm hover:text-green-700 transition-colors inline-flex items-center gap-1"
