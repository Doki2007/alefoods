---
import { getBestSellers } from "#pods/products-collection/products-collection.api.ts";

const bestSellers = await getBestSellers();
---

<section class="w-full py-16 px-6">
  <div class="max-w-6xl mx-auto pb-8">
    <div class="flex flex-col text-center mb-12 gap-5 text-primary">
      <h2 class="text-3xl md:text-4xl font-bold">Best Sellers</h2>
      <p
        class="text-center text-lg max-w-lg mx-auto font-semibold text-secondary"
      >
        Our main product line, known for its quality, simplicity, and authentic
        origin.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        bestSellers.map((p) => (
          <div class="group rounded-2xl bg-light-bg/50 hover:bg-light-bg border border-primary transition">
            <div class="relative aspect-auto mb-4 w-full min-h-48 flex items-center justify-center overflow-hidden rounded-2xl group-hover:border-b-2 group-hover:border-b-primary">
              <span class="absolute top-2 left-2 bg-badge text-primary text-[0.65rem] font-bold uppercase tracking-wider px-2 py-0.5 rounded-full z-10">
                Best Seller
              </span>
              <img
                src={p.picture[0].url}
                class="w-full h-auto object-cover rounded-lg group-hover:scale-105 transition-transform duration-300 ease-in-out bg-gradient-to-top from-black/40 to-transparent "
                loading="lazy"
                decoding="async"
                alt={p.title}
              />
            </div>
            <div class="text-left pb-5 px-5">
              <h3 class="text-xl font-bold mb-2 text-primary leading-tight">
                {p.title}
              </h3>
              <p class="text-sm font-semibold text-primary/90 mb-4">
                {p.shortDescription}
              </p>
              <a
                href={`/products/${p.slug}`}
                title={`Ver detalle de ${p.title}`}
                class="inline-flex items-center gap-1 text-sm font-semibold text-accent hover:bg-accent hover:text-body-bg px-3 py-1.5 rounded-md transition-colors duration-200 ease-in-out"
              >
                View Details â†’
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
