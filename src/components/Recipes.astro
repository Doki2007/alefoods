---
import { getIndexRecipes } from "#pods/recipe-collection/recipe-collection.api.ts";

const indexRecipes = await getIndexRecipes();
---

<section class="w-full py-16 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col text-center mb-12 gap-5 text-primary">
      <h2 class="text-3xl md:text-4xl font-bold">Our Recipes</h2>
      <p
        class="text-center text-lg font-semibold text-secondary max-w-lg mx-auto"
      >
        Recipes created to inspire practical and creative ways to enjoy
        Alefoods’ products.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        indexRecipes.map((recipes) => (
          <div class="group pb-6 bg-light-bg/50 hover:bg-light-bg rounded-2xl inset-shadow-sm hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="mb-4 flex items-center justify-center overflow-hidden">
              <img
                src={recipes.image.url}
                loading="lazy"
                alt={recipes.title}
                class="w-full h-auto object-center aspect-4/3 transition-transform duration-500 group-hover:scale-110"
              />
            </div>

            <div class="px-6">
              <h3 class="text-2xl font-bold mb-3 text-primary leading-tight">
                {recipes.title}
              </h3>

              <a
                href={`/recipes/${recipes.slug}`}
                title="View Recipe Details"
                class="text-accent font-semibold text-base hover:bg-accent inline-flex items-center gap-2 hover:text-body-bg px-3 py-1.5 rounded-md transition-colors duration-200 ease-in-out"
              >
                View Recipes →
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
