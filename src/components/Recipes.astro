---
import { getIndexRecipes } from "#pods/recipe-collection/recipe-collection.api.ts";

const indexRecipes = await getIndexRecipes();
---

<section class="w-full py-16 px-6">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl text-center md:text-4xl font-bold mb-12 text-slate-800">
      Our Recipes
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        indexRecipes.map((recipes) => (
          <div class="pb-6 bg-white rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="mb-4 flex items-center justify-center overflow-hidden group">
              <img
                src={recipes.image.url}
                loading="lazy"
                alt={recipes.title}
                class="w-full h-auto object-center aspect-4/3 transition-transform duration-500 group-hover:scale-110"
              />
            </div>

            <div class="px-6">
              <h3 class="text-2xl font-bold mb-3 text-slate-900 leading-tight">
                {recipes.title}
              </h3>

              <a
                href={`/recipes/${recipes.slug}`}
                class="text-green-700 font-semibold text-base hover:bg-green-700 inline-flex items-center gap-2 hover:text-white px-3 py-1.5 rounded-md transition-colors duration-200 ease-in-out"
              >
                View Recipes â†’
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
